<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>createEventServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.createEventServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>invalidateEventServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.invalidateEventServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>addMessageServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.addMessageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>createSessionServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.createSessionServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getListaEventsServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.getListaEventsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>aggiornaSessionEventServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.aggiornaSessionEventServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getMessagesServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.getMessagesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>resettaEventiServlet</servlet-name>
        <servlet-class>it.unitn.prova.servlet.resettaEventiServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>createEventServlet</servlet-name>
        <url-pattern>/createEvent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>invalidateEventServlet</servlet-name>
        <url-pattern>/invalidateEvent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>addMessageServlet</servlet-name>
        <url-pattern>/addMessage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>createSessionServlet</servlet-name>
        <url-pattern>/createSession</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getListaEventsServlet</servlet-name>
        <url-pattern>/getListaEvents</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>aggiornaSessionEventServlet</servlet-name>
        <url-pattern>/aggiornaSessionEvent</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getMessagesServlet</servlet-name>
        <url-pattern>/getMessages</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>resettaEventiServlet</servlet-name>
        <url-pattern>/resettaEventi</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>AddEventPage.html</welcome-file>
    </welcome-file-list>
</web-app>
